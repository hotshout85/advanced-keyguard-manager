<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <CheckBox android:id="@+id/enable_clear_keyguard"
     android:layout_width="fill_parent" android:layout_height="wrap_content"
     android:text="@string/disable_keyguard_label"/>
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:text="@string/unlock_instructions" />
    <ListView android:id="@+id/paired_devices_list"
        android:layout_height="fill_parent" android:layout_width="fill_parent"
        android:layout_weight="1" android:choiceMode="multipleChoice"
        android:textFilterEnabled="true" />
</LinearLayout>
